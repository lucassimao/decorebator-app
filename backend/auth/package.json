{
  "name": "auth",
  "version": "0.0.1",
  "description": "Decorebator authentication endpoint",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.js'",
    "test": "jest --detectOpenHandles 'src/'",
    "format": "prettier --write 'src/**/*.js'",
    "jest-watch": "jest --watch --detectOpenHandles 'src/'",
    "start:dev": "nodemon",
    "build": "npx rimraf build && npx tsc && npx copyfiles -u 1 src/resources/*  build",
    "start": "node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lucassimao/decorebator-app.git"
  },
  "author": "Lucas Simao",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lucassimao/decorebator-app/issues"
  },
  "homepage": "https://github.com/lucassimao/decorebator-app#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "gcp-metadata": "^4.2.1",
    "jwt-builder": "^1.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "typeorm": "^0.2.29",
    "typeorm-naming-strategies": "^2.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "husky": "^4.3.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
