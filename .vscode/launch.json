      "port": 9229,
      "runtimeArgs": ["--prefix", "${workspaceFolder}/backend/auth", "start"]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Wordlists",
        "runtimeExecutable": "npm",
        "port": 9228,
        "env": {
          "MONGO_DB_URL": "mongodb://localhost:27017/decorebator-dev",
          "HTTP_PORT": "3002"
        },
        "runtimeArgs": ["--prefix", "${workspaceFolder}/backend/wordlists", "start"]
      },    
 
  ]
